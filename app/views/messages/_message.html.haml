.mainChat-main__messageList
  %ul.mainChat-main__messageList-content
    %li.groupName
      = message.user.name 
    %li.inputDate
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .mainChat-main__messageList-message
    - if message.coment.present?
      %p.mainChat-main__messageList-message
        = message.coment
    = image_tag message.image.url, class: "mainChat-main__messageList-image" if message.image.present?